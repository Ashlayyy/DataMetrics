{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "target": "es2016",
    "lib": ["es6", "dom", "es2016"],
    "module": "System",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "moduleResolution": "node",
    "allowJs": true,
  },
  "include": ["BackEnd/src/**/*", "BackEnd/test/**/*", "FrontEnd/src/**/*", "FrontEnd/test/**/*"],
  "exclude": ["BackEnd/node_modules", "BackEnd/dist", "BackEnd/logs"]
}
